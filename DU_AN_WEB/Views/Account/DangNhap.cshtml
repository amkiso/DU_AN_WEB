@{
    Layout = null;
}
@{
    ViewBag.Title = "Đăng nhập";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangNhap</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        .login-card {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 10px;
            display: block;
        }

        .form-check-label {
            margin-bottom: 0;
        }

        .forgot-password {
            font-size: 0.9em;
        }

        .home-link {
            display: inline-flex;
            align-items: center;
            text-decoration: none;
            margin-top: 15px;
        }

        .form-control {
            display: flex;
            margin: 0 auto;
        }

        .home-link i {
            margin-right: 5px;
        }
    </style>
</head>

<body class="bg-gradient" style="background-image: url('/Content/Pic/bgr.jpg') !important; background-size: cover; background-position: center;background-repeat: no-repeat; height:100%;margin:0;padding:0;">
    <div class="card login-card">
        <div class="card-body">
            <h3 class="text-center mb-3">Đăng nhập</h3>
            <img src="~/Content/Pic/ChatGPT Image 21_12_37 10 thg 7, 2025.png" alt="Logo" class="logo rounded-circle" />
            <p class="text-center text-muted mb-4">Vui lòng đăng nhập để nâng cao trải nghiệm dịch vụ</p>

            @if (!string.IsNullOrEmpty(ViewBag.Message as string))
            {
                <div class="alert alert-warning mt-3 text-center">
                    @ViewBag.Message
                </div>
            }
            @* --- KHUNG HIỂN THỊ DEBUG --- *@
            @if (ViewBag.DebugUsername != null)
            {
                <div class="alert alert-info mt-3" style="text-align: left; word-break: break-all;">
                    <h5 class="alert-heading">Thông tin Debug từ Controller</h5>
                    <hr>
                    <p class="mb-1"><strong>Username nhận được:</strong> <code>@ViewBag.DebugUsername</code></p>
                    <p class="mb-1"><strong>Password nhận được:</strong> <code>@ViewBag.DebugPassword</code></p>
                    <p class="mb-0"><strong>Role từ CSDL:</strong> <code>@ViewBag.DebugRole</code></p>
                </div>
            }
            @* --- KẾT THÚC KHUNG DEBUG --- *@
            @using (Html.BeginForm("SubmitForm", "Account", FormMethod.Post))
            {
                <div class="form-group mb-3">
                    <input type="text" name="username" class="form-control rounded-pill" placeholder="Tên đăng nhập" />
                </div>
                <div class="form-group mb-3">
                    <input type="password" name="password" class="form-control rounded-pill" id="psw" placeholder="Mật khẩu" />
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
                    </div>
                    <a href="/Home/QuenMatKhau" class="forgot-password">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            }

            <p class="text-center mt-3">
                Bạn chưa có tài khoản? <a href="/Account/DangKi">Đăng ký</a>
            </p>

            <div class="text-center">
                <a href="/Home/Index" class="home-link">
                    <i class="bi bi-house-door-fill"></i> Trang chủ
                </a>
            </div>
        </div>
    </div>
</body>
</html>
