@model DU_AN_WEB.Models.USER_DATA
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Thông tin người dùng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="alert alert-success text-center">
        <h4>Đăng nhập thành công!</h4>
        <p><strong>ID:</strong> @Model.ID_USER</p>
        <p><strong>Tên đăng nhập:</strong> @Model.NAME_USER</p>
        <p><strong>Ngày tạo:</strong> @Model.DAY_CREATED.ToString()</p>
        <p><strong>Loại tài khoản:</strong> @Model.USER_TYPE</p>
        <p><strong>Trạng thái:</strong> @Model.USER_STATUS</p>
        <br />
        <small>Bạn sẽ được chuyển hướng sau 5 giây...</small>
    </div>

    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Home")';
        }, 5000);
    </script>
</body>
</html>
